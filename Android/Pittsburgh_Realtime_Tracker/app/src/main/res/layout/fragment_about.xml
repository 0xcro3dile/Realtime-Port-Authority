<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About"
        android:id="@+id/heading_about"
        android:layout_alignParentTop="true"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This app was created with love by:"
        android:id="@+id/description_about"
        android:layout_below="@+id/heading_about"
        android:paddingLeft="12dp"
        android:paddingTop="2dp"
        android:textColor="#c0c0c0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ritwik Gupta (Developer)"
        android:id="@+id/dev1_about"
        android:layout_below="@+id/description_about"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:textColor="#ffed70" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jeremy Jao (Developer)"
        android:id="@+id/dev2_about"
        android:layout_below="@+id/dev1_about"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:textColor="#ffed70" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vincent Agresti (Project Manager)"
        android:id="@+id/dev3_about"
        android:layout_below="@+id/dev2_about"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:textColor="#ffed70" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="12dp"
        android:paddingRight="12dp" />

</RelativeLayout>